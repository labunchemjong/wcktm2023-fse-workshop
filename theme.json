{
	"$schema": "https://schemas.wp.org/wp/6.2/theme.json",
	"version": 2,
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#0f6ed7",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#181529",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#161c2e",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
					"color": "#f9f9f9",
					"name": "Background",
					"slug": "background"
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "100%"
		},
		"spacing": {
			"blockGap": null,
			"margin": true,
			"padding": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"blocks": {
			"core/group": {
				"color": {
					"background": true,
					"custom": true,
					"customDuotone": true,
					"customGradient": true,
					"defaultDuotone": true,
					"defaultGradients": true,
					"defaultPalette": true,
					"duotone": [],
					"gradients": [],
					"palette": [
						{
							"color": "#0f6ed7",
							"name": "Primary",
							"slug": "primary"
						},
						{
							"color": "#181529",
							"name": "Secondary",
							"slug": "secondary"
						},
						{
							"color": "#161c2e",
							"name": "Tertiary",
							"slug": "tertiary"
						},
						{
							"color": "#f9f9f9",
							"name": "Background",
							"slug": "background"
						}
					],
					"text": true
				},
				"shadow": {
					"defaultPresets": true,
					"presets": []
				},
				"spacing": {
					"units": [
						"%",
						"px",
						"em",
						"rem",
						"vh",
						"vw"
					]
				}
			}
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"spacing": {
					"padding": {
						"bottom": "0.7rem",
						"left": "2.2rem",
						"right": "2.2rem",
						"top": "0.7rem"
					}
				},
				"typography": {
					"fontWeight": "600"
				}
			},
			"core/columns": {
				"spacing": {
					"margin": {
						"bottom": "0",
						"top": "0"
					},
					"padding": {
						"bottom": "1rem",
						"top": "1rem"
					}
				}
			},
			"core/heading": {
				"spacing": {
					"margin": {
						"top": "0"
					}
				}
			},
			"core/list": {
				"typography": {
					"fontWeight": "300",
					"lineHeight": "1.9"
				}
			},
			"core/page-list": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"spacing": {
					"padding": {
						"left": "0"
					}
				},
				"typography": {
					"textDecoration": "none"
				}
			},
			"core/paragraph": {
				"typography": {
					"fontWeight": "300",
					"lineHeight": "1.9"
				}
			},
			"core/post-author-name": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontSize": "0.7rem",
					"fontWeight": "500",
					"textTransform": "uppercase"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "0.7rem",
					"fontWeight": "500",
					"textTransform": "uppercase"
				}
			},
			"core/post-featured-image": {
				"spacing": {
					"margin": {
						"bottom": "0"
					}
				}
			},
			"core/post-template": {
				"spacing": {
					"blockGap": "1rem"
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							}
						},
						"typography": {
							"lineHeight": "1.3",
							"textDecoration": "none"
						}
					}
				},
				"spacing": {
					"margin": {
						"bottom": "0.5rem",
						"top": "0"
					}
				},
				"typography": {
					"fontSize": "1.4rem",
					"textDecoration": "none"
				}
			},
			"core/preformatted": {
				"typography": {
					"fontSize": "1rem",
					"lineHeight": "1.5"
				}
			},
			"core/query": {
				"spacing": {
					"blockGap": "1rem"
				}
			},
			"core/separator": {
				"spacing": {
					"margin": {
						"top": "1rem",
						"bottom": "1rem"
					}
				}
			},
			"core/query-pagination": {
				"spacing": {
					"margin": {
						"top": "2rem"
					}
				}
			},
			"core/query-pagination-previous": {
				"typography": {
					"textDecoration": "none"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0",
						"left": "0",
						"right": "0"
					}
				}
			},
			"core/query-pagination-numbers": {
				"typography": {
					"textDecoration": "none"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0",
						"left": "0",
						"right": "0"
					}
				}
			},
			"core/query-pagination-next": {
				"typography": {
					"textDecoration": "none"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0",
						"left": "0",
						"right": "0"
					}
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"spacing": {
					"margin": {
						"bottom": "0",
						"left": "0",
						"right": "0",
						"top": "0"
					}
				},
				"typography": {
					"fontWeight": "700"
				}
			},
			"core/social-link": {
				"typography": {
					"fontSize": "1.3rem"
				}
			}
		},
		"color": {
			"text": "var(--wp-preset--color--secondary)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "2.5rem"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "2rem"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "1.8rem"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "1.5rem"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "1.3rem"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "1rem"
				}
			},
			"heading": {
				"spacing": {
					"margin": {
						"bottom": "1.3rem"
					}
				},
				"typography": {
					"fontWeight": "500",
					"lineHeight": "1.3",
					"textDecoration": "none"
				}
			},
			"link": {
				"color": {
					"text": "inherit"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--poppins)",
			"fontWeight": "400"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}